{
  "description": "Simple Volume Plugin for Docker",
  "documentation": "https://tfs.inside-axoom.org/tfs/axoom/axoom/_git/docker-volume-simple?_a=readme&fullScreen=true",
  "entrypoint": [
    "/docker-volume-simple"
  ],
  "env": [
    {
      "name": "ROOT",
      "settable": [
        "value"
      ],
      "value": "/mnt/volumes"
    },
    {
      "name": "SCOPE",
      "settable": [
        "value"
      ],
      "value": "local"
    }
  ],
  "mounts": [
    {
        "destination": "/mnt",
        "type": "bind",
        "source": "/mnt",
        "options": ["rbind","rw"]
    }
  ],
  "interface": {
    "socket": "plugin.sock",
    "types": [
      "docker.volumedriver/1.0"
    ]
  }
}
